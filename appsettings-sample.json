{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedCorsOrigins": "YOUR_ALLOWED_CORS_ORIGINS",
  "MongoDB": {
    "ConnectionString": "<YOUR_MONGODB_CONNECTION_STRING>",
    "DatabaseName": "<YOUR_MONGODB_DATABASE_NAME>"
  },
  "Jwt": {
    "Key": "<YOUR_JWT_SECRET_KEY>",
    "Issuer": "cakeshop_api",
    "Audience": "cakeshop_client",
    "ExpiryInMinutes": 1440 // 24 hours
  },
  "CloudflareR2": {
    "AccessKey": "YOUR_CLOUDFLARE_ACCESS_KEY",
    "SecretKey": "YOUR_CLOUDFLARE_SECRET_KEY",
    "Endpoint": "YOUR_CLOUDFLARE_ENDPOINT",
    "BucketName": "YOUR_CLOUDFLARE_BUCKET_NAME"
  }
}
